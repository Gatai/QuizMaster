    <!---<<<<<<<<<<<<<<<<    HEADER  <<<<<<<<<<<<<<<<<<<<-->

    <Grid>
        <Grid.RowDefinitions>
            <!--hur hög raden det ska vara-->
            <RowDefinition Height="200"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Den täcker 2 columner-->
        <Grid Background="Aquamarine" Grid.ColumnSpan="2" Grid.Row="0" >

            <TextBlock Foreground="BlueViolet" FontSize="50" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
               Welcome to Quiz master
            </TextBlock>
            <StackPanel HorizontalAlignment="Left">
                <Image Source="Pictures/dice.png" Height="200" Width="200"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right">
                <TextBox PlaceholderText="Score" Width="168"/>
            </StackPanel>

            <!--<Button Grid.Row="0" 
                    HorizontalAlignment="Right" 
                    Click="GetAllFood_Click" CommandParameter="{Binding ElementName = QTextBlock}" >Call API Food</Button>-->
        </Grid>
        <!---<<<<<<<<<<<<<<<<    SLUT PÅ HEADER  <<<<<<<<<<<<<<<<<<<<-->

        <!-- <<<<<<<<<<<<<<<<<< BODY VÄNTER FÄLT <<<<<<<<<<<<<<<<<<<<<<<-->

        <!--<Rectangle Fill="AntiqueWhite" 
                       Stretch="Fill"
                       Grid.Row="1" 
                       Grid.Column="0"/>-->

        <!--frågor drop down-->
        <Grid Grid.Row="1" Grid.Column="0" >
            <Grid.RowDefinitions >
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel>
                <!--<TextBlock >Selected Item </TextBlock>-->
                <ComboBox x:Name="CategoryComboBox"
                          ItemsSource="{x:Bind Categories}"
                          DisplayMemberPath="CategoryName"
                          SelectedValuePath="Id"
                          PlaceholderText="Select Category"
                          Width="200"
                          SelectionChanged="CategoryChanged"
                          Background="Beige">
                </ComboBox>
                
              

            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" >
                <TextBox x:Name="amountBox" Width="200" Height="40" PlaceholderText="Number of Questions" Text="3" > </TextBox>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1" Background="Beige">
                <RadioButton GroupName="dif" Checked="SetLevel" CommandParameter="hard">
                    hard
                </RadioButton>
                <RadioButton GroupName="dif" Checked="SetLevel" CommandParameter="medium">
                    medium
                </RadioButton>
                <RadioButton GroupName="dif" Checked="SetLevel" CommandParameter="easy" >
                    easy
                </RadioButton>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="3" Grid.Column="2" Background="White">
                <RadioButton GroupName="type" Checked="SetType" CommandParameter="mix">
                    Any Type
                </RadioButton>
                <RadioButton GroupName="type" Checked="SetType" CommandParameter="multiple">
                    Multiple choice
                </RadioButton>
                <RadioButton GroupName="type" Checked="SetType" CommandParameter="boolean" >
                    True/False
                </RadioButton>
            </StackPanel>


            <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="3" >
                <Button Content="Start Game"
                        Background="Green" 
                        Margin="4" 
                        Width="190"
                        Click="StartGameAsync"
                        x:Name="StartButton"
                        IsEnabled="False"/>
            </StackPanel>

            <!--<Grid Grid.Row="3" Grid.Column="3" Name="grid">
